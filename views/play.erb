<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<body style="text-align:center">
<div id="vs" class="col-sm-12">
  <h1><%=@game.player1.name%> Vs <%=@game.player2.name%></h1>
</div>

<div id="score" class="col-sm-12">
  <p><%=@game.player1.name %>'s HP: <%=@game.player1.hp%>/100</p>
  <p><%=@game.player2.name %>'s HP: <%=@game.player2.hp%>/100</p>
</div>

<div class="col-sm-6">
  <h1><%=@game.player1.name%></h1>
  <br>
  <form action="/attack" method="post">
    <input type="hidden" name="player" value="p1"/>
    <input type="hidden" name="attack_type" value="standard"/>
    <button type="submit" id="P1 Attacks!">Attack!</button>
  </form>
  <form action="/attack" method="post">
    <input type="hidden" name="player" value="p1"/>
    <input type="hidden" name="attack_type" value="paralyse"/>
    <button type="submit" id="P1 Paralyse">Paralyse!</button>
  </form>
  <form action="/attack" method="post">
    <input type="hidden" name="player" value="p1"/>
    <input type="hidden" name="attack_type" value="poison"/>
    <button type="submit" id="P1 Poison">Poison!</button>
  </form>
  <form action="/attack" method="post">
    <input type="hidden" name="player" value="p1"/>
    <input type="hidden" name="attack_type" value="sleep"/>
    <button type="submit" id="P1 Sleep">Sleep!</button>
  </form>
  <form action="/attack" method="post">
    <input type="hidden" name="player" value="p1"/>
    <input type="hidden" name="attack_type" value="heal"/>
    <button type="submit" id="P1 Heal">Heal!</button>
  </form>
</div>

<div class="col-sm-6">
  <h1><%=@game.player2.name%></h1>
  <br>
  <form action="/attack" method="post">
    <input type="hidden" name="player" value="p2"/>
    <input type="hidden" name="attack_type" value="standard"/>
    <button type="submit" id="P2 Attacks!">Attack!</button>
  </form>

  <form action="/attack" method="post">
    <input type="hidden" name="player" value="p2"/>
    <input type="hidden" name="attack_type" value="paralyse"/>
    <button type="submit" id="P2 Paralyse">Paralyse!</button>
  </form>

  <form action="/attack" method="post">
    <input type="hidden" name="player" value="p2"/>
    <input type="hidden" name="attack_type" value="poison"/>
    <button type="submit" id="P2 Poison">Poison!</button>
  </form>

  <form action="/attack" method="post">
    <input type="hidden" name="player" value="p2"/>
    <input type="hidden" name="attack_type" value="sleep"/>
    <button type="submit" id="P2 Sleep">Sleep!</button>
  </form>

  <form action="/attack" method="post">
    <input type="hidden" name="player" value="p2"/>
    <input type="hidden" name="attack_type" value="heal"/>
    <button type="submit" id="P2 Heal">Heal!</button>
  </form>
</div>

<% if @game.was_attack%>
<div class="col-sm-12">
<%@game.attack_message.each do |message|%>
  <p><%= message %></p>
<%end%>
</div>
<% end %>


<% if @game.was_lost %>
<div class="col-sm-12">
<h1><%=@game.loser.name%> LOST!</h1>
</div>
<% end %>
</body>
